@require 'nib';

global-reset();

body {
  background-size: 8px 8px;
  background-position: -1px -1px;
  background-image: linear-gradient(to bottom, #eee 0px, transparent 1px);
  zoom: 1;
  font-family: Roboto;
  font-weight: 300;
}

debug = true;

fontsize(size, push = 0) {
  font-size = unit(size, 'px');
  line-height = ceil(unit(size, 'px') * 1.3 / 8) * 8
  font-size: font-size;
  line-height: line-height;
  if (push > 0) {
    padding: unit(push, 'px') 0 unit(8 - push, 'px') 0;
  }
  if (debug) {
    &:before {
      block-size = line-height;
      if (push > 0) {
        block-size += 8px;
      }
      contents = font-size block-size
      content: join('/', contents) + ' ';
    }
    &:hover {
      background: rgba(#0f0, 0.2);
    }
  }
}

